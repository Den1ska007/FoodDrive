@model IEnumerable<FoodDrive.Models.Admin>
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3><i class="fas fa-users-cog me-2"></i>Адміністратори</h3>
                <a href="@Url.Action("CreateAdmin")" class="btn btn-light">
                    <i class="fas fa-plus-circle me-2"></i>Додати
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>ID</th>
                            <th>Ім'я</th>
                            <th>Адреса</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var admin in Model)
                        {
                            <tr>
                                <td>#@admin.id</td>
                                <td>@admin.Name</td>
                                <td>@admin.Address</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("EditAdmin", new { id = admin.id })"
                                           class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="DeleteAdmin" method="post">
                                            <input type="hidden" name="id" value="@admin.id" />
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Видалити адміністратора?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                        
                                        <div class="modal fade" id="deleteAdminModal" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header bg-danger text-white">
                                                        <h5 class="modal-title">
                                                            <i class="fas fa-exclamation-triangle me-2"></i>Підтвердження
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Ви впевнені, що хочете видалити цього адміністратора?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                            <i class="fas fa-times me-2"></i>Скасувати
                                                        </button>
                                                        <form id="deleteForm" method="post">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">
                                                                <i class="fas fa-trash me-2"></i>Видалити
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <script>
                                            document.querySelectorAll('.delete-admin-btn').forEach(btn => {
                                                btn.addEventListener('click', function(e) {
                                                    e.preventDefault();
                                                    const form = document.getElementById('deleteForm');
                                                    form.action = this.href;
                                                    new bootstrap.Modal(document.getElementById('deleteAdminModal')).show();
                                                });
                                            });
                                        </script>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>