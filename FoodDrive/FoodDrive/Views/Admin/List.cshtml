@model IEnumerable<FoodDrive.Models.Customer>
<h2>Список клієнтів</h2>
<head>
        <title>FoodDrive - Додавання відгуків</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 20px;
            }

            table {
                width: 100%;
                border-collapse: collapse;
                margin-bottom: 20px;
            }

            th, td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            th {
                background-color: #f2f2f2;
            }

            form {
                margin-top: 20px;
            }
            input {
                padding: 8px;
                margin: 5px;
                width: 200px;
            }

            button {
                padding: 8px 15px;
                background-color: #4CAF50;
                color: white;
                border: none;
                cursor: pointer;
            }

            button:hover {
                background-color: #45a049;
            }
        </style>

    </head>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Ім'я</th>
        <th>Кількість замовлень</th>
        <th>Дії</th>
    </tr>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.id</td>
            <td>@customer.Name</td>
            <td>@customer.Orders.Count</td>
            <td>
                <a href="@Url.Action("EditCustomer", new { id = customer.id })">Редагувати</a> |
                <a href="@Url.Action("DeleteCustomer", new { id = customer.id })">Видалити</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("CreateCustomer")">Додати клієнта</a>
<li><a href="@Url.Action("Index")">Назад</a>
