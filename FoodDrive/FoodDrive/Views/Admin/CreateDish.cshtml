@using FoodDrive.Entities
@model Dish
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Створити нову страву</h3>
        </div>
        <div class="card-body">
            <form asp-action="CreateDish" method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Назва страви">
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TypeOfDish" class="form-label"></label>
                        <select asp-for="TypeOfDish"
                                class="form-select"
                                asp-items="Html.GetEnumSelectList<TypeOfDish>()">
                            <option value="">Оберіть тип кухні</option>
                        </select>
                        <span asp-validation-for="TypeOfDish" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"
                                  placeholder="Опис страви"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Price" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">₴</span>
                            <input asp-for="Price" type="number" step="0.01" class="form-control"
                                   placeholder="0.00">
                        </div>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Stock" class="form-label"></label>
                        <input asp-for="Stock" type="number" class="form-control"
                               placeholder="Доступна кількість">
                        <span asp-validation-for="Stock" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Rating" class="form-label"></label>
                        <select asp-for="Rating" class="form-select">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <option value="@i">@i / 5</option>
                            }
                        </select>
                        <span asp-validation-for="Rating" class="text-danger small"></span>
                    </div>

                    <div class="col-12 text-end mt-4">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-save me-2"></i>Зберегти
                        </button>
                        <a href="@Url.Action("ListDishes")" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-times me-2"></i>Скасувати
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>