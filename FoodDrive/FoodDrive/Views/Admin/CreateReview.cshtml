@using FoodDrive.Models.ViewModels
@model CreateReviewViewModel
@{
    ViewData["Title"] = "Створити відгук";
}

<h2>Створити відгук</h2>

<form method="post">
    <div class="form-group">
        <label>Користувач:</label>
        <select asp-for="SelectedUserId"
                asp-items="Model.Users"
                class="form-control">
            <option value="">-- Оберіть користувача --</option>
        </select>
        <span asp-validation-for="SelectedUserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Страва:</label>
        <select asp-for="SelectedDishId"
                asp-items="Model.Dishes"
                class="form-control">
            <option value="">-- Оберіть страву --</option>
        </select>
        <span asp-validation-for="SelectedDishId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Оцінка (1-5):</label>
        <input asp-for="Rating" type="number" min="1" max="5"
               class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Текст відгуку:</label>
        <textarea asp-for="Text" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Зберегти</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}