@model IEnumerable<FoodDrive.Models.Dish>
@{
    ViewData["Title"] = "Список страв";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <div class="d-flex justify-content-between align-items-center">
                <h3><i class="fas fa-utensils me-2"></i>Меню</h3>
                <div>
                    <a href="@Url.Action("CreateDish")" class="btn btn-dark">
                        <i class="fas fa-plus me-2"></i>Додати
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Фото</th>
                            <th>Назва</th>
                            <th>Опис</th>
                            <th>Ціна</th>
                            <th>Наявність</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dish in Model)
                        {
                            <tr>
                                <td>
                                    <div class="dish-thumbnail"
                                         style="background-image: url('@Url.Content($"~/images/dishes/{dish.id}.jpg")')">
                                    </div>
                                </td>
                                <td>@dish.Name</td>
                                <td class="text-truncate" style="max-width: 200px;">@dish.Description</td>
                                <td>@dish.Price.ToString("C")</td>
                                <td>
                                    <span class="badge @(dish.Stock > 0 ? "bg-success" : "bg-danger")">
                                        @dish.Stock шт
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("EditDish", new { id = dish.id })"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="DeleteDish" method="post">
                                            
                                            <input type="hidden" name="id" value="@dish.id" />
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Ви впевнені, що хочете видалити цю страву?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .dish-thumbnail {
        width: 80px;
        height: 80px;
        background-size: cover;
        background-position: center;
        border-radius: 8px;
        background-color: #f8f9fa;
    }
</style>