@model IEnumerable<FoodDrive.Models.Order>

<h2>Список замовлень</h2>

<table border="1">
    <tr>
        <th>ID</th>
        <th>Користувач</th>
        <th>Товари</th>
        <th>Загальна ціна</th>
        <th>Статус</th>
        <th>Дії</th>
    </tr>
    @foreach (var order in Model)
    {
            <tr>
                <td>@order.id</td>
                <td>@order.User.Name</td>
            <td>
                @foreach (var product in order.Products)
                {
                            <span>@product.Name</span>

                    <br />
                }
                </td>
                <td>@order.TotalPrice грн</td>
                <td>@order.Status</td>
                    <td>
        <a href="@Url.Action("EditOrder", new { id = order.id })">Редагувати</a> |
        <a href="@Url.Action("DeleteOrder", new { id = order.id })">Видалити</a>
    </td>

            </tr> 
    }
</table>

<a href="@Url.Action("CreateOrder")">Додати замовлення</a>
<li><a href="@Url.Action("Menu")">Назад</a>