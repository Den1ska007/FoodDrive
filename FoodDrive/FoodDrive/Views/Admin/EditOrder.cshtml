@model EditOrderViewModel

<h2>Редагувати замовлення</h2>

<form method="post">
    <div class="form-group">
        <label>Ім'я клієнта</label>
        <input type="text" class="form-control" value="@Model.CustomerName" disabled />
    </div>

    <div class="form-group">
        <label>Статус</label>
        <select class="form-control" asp-for="Status">
            <option value="Pending" @(Model.Status == Status.Pending ? "selected" : "")>Очікує</option>
            <option value="Completed" @(Model.Status == Status.Completed ? "selected" : "")>Завершено</option>
            <option value="Cancelled" @(Model.Status == Status.Cancelled ? "selected" : "")>Скасовано</option>
        </select>
    </div>

    <h4>Продукти в замовленні</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Назва страви</th>
                <th>Кількість</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.DishName</td>
                    <td>
                        <input type="number" class="form-control" value="@product.Quantity" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Зберегти зміни</button>
</form>
