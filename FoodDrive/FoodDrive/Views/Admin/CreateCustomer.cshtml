@model FoodDrive.Models.Customer
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h3><i class="fas fa-user-plus me-2"></i>Новий клієнт</h3>
        </div>
        <div class="card-body">
            <form asp-action="CreateCustomer" method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Ім'я</label>
                        <input asp-for="Name" class="form-control" placeholder="Введіть ім'я" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Пароль</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Введіть пароль" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Адреса</label>
                        <input asp-for="Address" class="form-control" placeholder="Введіть адресу" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-2"></i>Зберегти
                        </button>
                        <a href="@Url.Action("List")" class="btn btn-secondary">
                            <i class="fas fa-undo me-2"></i>Назад
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>