@model FoodDrive.Models.Customer
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h3><i class="fas fa-user-plus me-2"></i>Новий клієнт</h3>
        </div>
        <div class="card-body">
            <form asp-action="CreateCustomer" method="post">
                <div class="row g-3">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Balance"></label>
                        <input asp-for="Balance" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Balance" class="text-danger"></span>
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-2"></i>Зберегти
                        </button>
                        <a href="@Url.Action("List")" class="btn btn-secondary">
                            <i class="fas fa-undo me-2"></i>Назад
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>