@model FoodDrive.Models.Customer

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        form {
            margin-top: 20px;
        }

        input {
            padding: 8px;
            margin: 5px;
            width: 200px;
        }

        button {
            padding: 8px 15px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>

    <h2>Створення клієнта</h2>

    <form asp-action="CreateCustomer" method="post">
        <label>Ім'я:</label>
        <input type="text" name="Name" value="@Model?.Name" required />
        <br />
        <label>Пароль:</label>
        <input type="text" name="Password" value="@Model?.Password" required />
        <br />
        <label>Адрес:</label>
        <input type="text" name="Address" value="@Model?.Address" required />
        <br />
        <button type="submit">Створити</button>
    </form>

    <a href="@Url.Action("List")">Назад до списку користувачів</a>

</body>

