@using FoodDrive.Entities
@model Dish
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Редагування страви</h3>
        </div>
        <div class="card-body">
            <form asp-action="EditDish" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control"
                               placeholder="Нова назва страви">
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TypeOfDish" class="form-label"></label>
                        <select asp-for="TypeOfDish"
                                class="form-select"
                                asp-items="Html.GetEnumSelectList<TypeOfDish>()">
                        </select>
                        <span asp-validation-for="TypeOfDish" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"
                                  placeholder="Оновлений опис"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Price" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">₴</span>
                            <input asp-for="Price" type="number" step="0.01"
                                   class="form-control">
                        </div>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Stock" class="form-label"></label>
                        <input asp-for="Stock" type="number" class="form-control"
                               placeholder="Кількість на складі">
                        <span asp-validation-for="Stock" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Rating" class="form-label"></label>
                        <select asp-for="Rating" class="form-select">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <option value="@i">@i зірок</option>
                            }
                        </select>
                        <span asp-validation-for="Rating" class="text-danger small"></span>
                    </div>

                    <div class="col-12 text-end mt-4">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-save me-2"></i>Оновити
                        </button>
                        <a href="@Url.Action("ListDishes")" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-undo me-2"></i>Назад
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>