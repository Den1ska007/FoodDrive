del FoodDrive.Models.Admin

<h2>Створення адміністратора</h2>

<form asp-action="CreateAdmin" method="post">

    <label>Ім'я:</label>
    <input type="text" name="Name" value="@Model?.Name" required />
    <br />

    <label>Пароль:</label>
    <input type="password" name="Password" value="@Model?.Password" required />
    <br />
    <label>Адрес:</label>
    <input type="text" name="Address" value="@Model?.Address" required />
   ]<br />
    <button type="submit">Створити</button>
</form>

<a href="@Url.Action("Admins")">Назад до списку</a>
