@using FoodDrive.Entities
@model Admin
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h3><i class="fas fa-user-shield me-2"></i>Новий адміністратор</h3>
        </div>
        <div class="card-body">
            <form asp-action="CreateAdmin" method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Введіть ім'я" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PasswordHash" class="form-label"></label>
                        <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Введіть пароль" />
                        <span asp-validation-for="PasswordHash" class="text-danger small"></span>
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-save me-2"></i>Створити
                        </button>
                        <a href="@Url.Action("ListAdmin")" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-arrow-left me-2"></i>Назад
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>