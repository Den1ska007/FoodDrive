@model FoodDrive.Models.Admin

<h2>Редагування адміністратора</h2>

<form asp-action="EditAdmin" method="post">
    <input type="hidden" asp-for="id" />

    <label>Ім'я:</label>
    <input type="text" name="Name" value="@Model?.Name" required />
    <br />

    <label>Пароль:</label>
    <input type="password" asp-for="Password" required />
    <br />

    <button type="submit">Зберегти зміни</button>
</form>

<a href="@Url.Action("ListAdmin")">Назад до списку</a>
