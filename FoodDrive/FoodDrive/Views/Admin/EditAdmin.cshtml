@using FoodDrive.Entities
@model Admin
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3><i class="fas fa-user-edit me-2"></i>Редагування адміна</h3>
        </div>
        <div class="card-body">
            <form asp-action="EditAdmin" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Ім'я</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Новий пароль</label>
                        <input asp-for="PasswordHash" type="password" class="form-control" />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-2"></i>Зберегти
                        </button>
                        <a href="@Url.Action("ListAdmin")" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Скасувати
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>