<h2>Редагувати відгук</h2>
<form asp-action="EditReview" method="post">
    <label>ID користувача:</label>
    <input type="number" name="UserId" value="@Model?.UserId" required />
    <label>ID товару:</label>
    <input type="number" name="ProductId" value="@Model?.ProductId" required />
    <label>Оцінка (1-5):</label>
    <input type="number" name="Rating" min="1" max="5" value="@Model?.Rating" required />
    <label>Текст:</label>
    <textarea type="text" name="Text">@Model?.Text</textarea>
    <button type="submit">Зберегти</button>
</form>
