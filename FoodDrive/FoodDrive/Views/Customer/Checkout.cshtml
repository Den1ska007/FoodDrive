@model FoodDrive.Models.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Оформлення замовлення";
}

<div class="container mt-4">
    <h2>Підтвердження замовлення</h2>

    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h4>Ваші покупки</h4>
        </div>

        <div class="card-body">
            @if (Model.Items.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Страва</th>
                            <th class="text-end">Кількість</th>
                            <th class="text-end">Ціна</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Dish.Name</td>
                                <td class="text-end">@item.Quantity</td>
                                <td class="text-end">@((item.Dish.Price * item.Quantity).ToString("C"))</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="2" class="text-end">Загальна сума:</th>
                            <th class="text-end">@Model.TotalPrice.ToString("C")</th>
                        </tr>
                    </tfoot>
                </table>
            }
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-info text-white">
            <h4>Дані для доставки</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Ім'я:</strong> @Model.CustomerName</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Адреса:</strong> @Model.CustomerAddress</p>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="ConfirmOrder" method="post" class="mt-4">
        @Html.AntiForgeryToken()
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a asp-action="Index" class="btn btn-secondary">Повернутись</a>
            <button type="submit" class="btn btn-success">Підтвердити замовлення</button>
        </div>
    </form>
</div>