@model IEnumerable<FoodDrive.Models.Order>
@{
    ViewData["Title"] = "Мої замовлення";
}

<div class="container mt-4">
    <h2>Історія замовлень</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            У вас ще немає замовлень
        </div>
    }
    else
    {
        <div class="list-group mt-4">
            @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
            {
                <a asp-action="OrderDetails" asp-route-id="@order.id"
                   class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5>Замовлення #@order.id</h5>
                            <small class="text-muted">@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</small>
                        </div>
                        <div>
                            <span class="badge bg-@(order.Status == Status.Completed ? "success" : "warning")">
                                @order.Status
                            </span>
                            <span class="ms-2">@order.TotalPrice.ToString("C")</span>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
</div>