@model decimal

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Поповнення балансу</h4>
        </div>
        <div class="card-body">
            <form asp-action="TopUpBalance" method="post">
                <div class="form-group">
                    <label>Сума поповнення (грн):</label>
                    <input type="number"
                           name="amount"
                           class="form-control"
                           min="1"
                           max="10000"
                           step="1"
                           required>
                </div>
                <button type="submit" class="btn btn-success mt-3">
                    <i class="fas fa-coins me-2"></i>Поповнити
                </button>
            </form>
        </div>
    </div>
</div>