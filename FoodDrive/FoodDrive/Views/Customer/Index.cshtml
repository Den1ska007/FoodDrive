<!-- Views/Customer/Index.cshtml -->
@model IEnumerable<Dish>
@{
    ViewData["Title"] = "Меню";
}

<div class="menu-container">
    @foreach (var dish in Model)
    {
        <div class="dish-card">
            <h3>@dish.Name</h3>
            <p>@dish.Description</p>
            <p class="price">@dish.Price.ToString("C")</p>
            <button class="add-to-cart" data-dish-id="@dish.id">Додати в кошик</button>
        </div>
    }
</div>

<style>
    .menu-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .dish-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background: white;
    }

    .price {
        color: #2ecc71;
        font-weight: bold;
    }

    .add-to-cart {
        background: #3498db;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 4px;
        cursor: pointer;
    }
</style>