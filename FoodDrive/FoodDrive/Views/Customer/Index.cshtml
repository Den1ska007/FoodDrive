@model IEnumerable<FoodDrive.Models.Dish>
@{
    ViewData["Title"] = "Меню";
}

<div class="menu-container">
    @foreach (var dish in Model)
    {
        <div class="dish-card">
            <a asp-action="DishDetails" asp-route-id="@dish.id" class="dish-link">
                <h3>@dish.Name</h3>
                <img src="~/images/dishes/@(dish.id).jpg" alt="@dish.Name" class="dish-thumbnail" />
            </a>

            <div class="price">@dish.Price.ToString("C")</div>
        </div>
    }
</div>

<style>
    .menu-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .dish-link {
        text-decoration: none;
        color: inherit;
    }

    .dish-thumbnail {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
        margin: 10px 0;
    }
    .dish-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background: white;
        display: flex;
        flex-direction: column;
    }

    .price {
        color: #2ecc71;
        font-weight: bold;
        margin: 10px 0;
    }

    .add-to-cart {
        background: #3498db;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 4px;
        cursor: pointer;
        margin-top: auto;
    }

    .quantity-input {
        width: 60px;
        padding: 5px;
        margin-right: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    form {
        display: flex;
        align-items: center;
        margin-top: 10px;
    }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}