@{
    ViewData["Title"] = "Кошик";
}

<div class="container mt-4">
    <h2 class="mb-4">Ваш кошик</h2>

    <div class="card">
        <div class="card-body">
            <div id="cart-items">
                <!-- Тут будуть товари -->
                <div class="text-center py-5">
                    <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                    <p class="text-muted">Ваш кошик порожній</p>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <h4>Всього: <span id="total-price">0.00</span> грн</h4>
                <form asp-action="PlaceOrder" method="post">
                    <input type="hidden" name="items" id="cart-items-input" />
                    <button type="submit" class="btn btn-success btn-lg" disabled id="checkout-btn">
                        Оформити замовлення
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Тут буде логіка роботи з кошиком
    </script>
}