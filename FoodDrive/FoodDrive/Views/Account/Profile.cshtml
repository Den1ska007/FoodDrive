@model FoodDrive.Models.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Профіль користувача";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Мій профіль</h3>
                </div>
                <div class="text-center mb-4">
                    
                </div>
                <div class="card-body">
                    <div class="avatar-circle bg-secondary text-white mx-auto">
                        @{

                            var initial = "👤";
                            if (!string.IsNullOrEmpty(Model.Name))
                            {
                                initial = Model.Name.Length > 0
                                ? Model.Name.Substring(0, 1).ToUpper()
                                : "?";
                            }
                        }
                        <span class="initials">@initial</span>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Ім'я:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Роль:</dt>
                        <dd class="col-sm-8">@Model.Role</dd>

                        <dt class="col-sm-4">Баланс:</dt>
                        <dd class="col-sm-8">@Model.Balance.ToString("C2")</dd>

                        <dt class="col-sm-4">Адреса:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Дата реєстрації:</dt>
                        <dd class="col-sm-8">@Model.RegistrationDate.ToString("dd.MM.yyyy")</dd>
                    </dl>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="EditProfile" class="btn btn-primary me-md-2">
                            <i class="fas fa-edit me-2"></i>Редагувати профіль
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        font-weight: bold;
    }
</style>
